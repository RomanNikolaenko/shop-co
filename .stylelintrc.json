      {
        "type": "at-rule",
        "name": "forward"
      },
      "declarations",
      "rules",
      {
        "type": "at-rule",
        "name": "supports"
      },
      {
        "type": "at-rule",
        "name": "keyframes"
      },
      {
        "type": "at-rule",
        "name": "media"
      }
