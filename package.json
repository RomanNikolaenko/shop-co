{
  "name": "shop-co",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "ng": "ng",
    "del": "git push origin --delete gh-pages",
    "netlify": "netlify dev",
    "start": "ng serve",
    "build": "rimraf dist && ng build",
    "build:ssr": "npm run build && npm run serve:ssr",
    "deploy": "npx gh-pages -d dist/shop-co/browser",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr": "node --no-deprecation dist/shop-co/server/server.mjs",
    "prepare": "npx lefthook install",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:style": "stylelint \"src/**/*.scss\"",
    "lint:style:fix": "stylelint \"src/**/*.scss\" --fix",
    "lint:eslint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:eslint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "lint:all": "npm run lint:prettier:fix && npm run lint:style:fix && npm run lint:eslint:fix"
  },
  "dependencies": {
    "@angular/animations": "^20.1.7",
    "@angular/cdk": "^20.1.6",
    "@angular/common": "^20.1.7",
    "@angular/compiler": "^20.1.7",
    "@angular/core": "^20.1.7",
    "@angular/forms": "^20.1.7",
    "@angular/platform-browser": "^20.1.7",
    "@angular/platform-server": "^20.1.7",
    "@angular/router": "^20.1.7",
    "@angular/ssr": "^20.1.6",
    "@netlify/angular-runtime": "^3.0.0",
    "@netlify/functions": "^4.2.2",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "express": "^5.1.0",
    "ol": "^10.6.1",
    "rxjs": "~7.8.0",
    "sass": "^1.90.0",
    "sass-loader": "^16.0.5",
    "swiper": "^11.2.10",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.6",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.7",
    "@evilmartians/lefthook": "^1.12.3",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "gh-pages": "^6.3.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.23.1",
    "stylelint-config-recommended-scss": "^15.0.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "typescript": "~5.8.2"
